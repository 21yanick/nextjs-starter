{
  "name": "nextjs-template",
  "version": "1.0.0",
  "description": "Swiss NextJS Starter Kit - Production-ready template with Auth, Subscriptions & Swiss optimizations",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "db:setup": "node scripts/setup-database.js",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "prepare": "husky"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@react-email/components": "^0.2.0",
    "@sentry/nextjs": "^9.36.0",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.50.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.525.0",
    "next": "15.3.5",
    "next-themes": "^0.4.6",
    "pino": "^9.7.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-email": "^4.1.0",
    "resend": "^4.6.0",
    "stripe": "^18.3.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "dotenv": "^17.2.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.5",
    "husky": "^9.1.7",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "tailwindcss-animate": "^1.0.7",
    "tw-animate-css": "^1.3.5",
    "typescript": "^5"
  },
  "businessModel": {
    "type": "saas",
    "features": {
      "subscriptions": true,
      "shop": false,
      "bookings": false
    },
    "payments": {
      "stripe": {
        "products": "subscriptions",
        "webhooks": ["customer.subscription.created", "customer.subscription.updated", "invoice.payment_succeeded"]
      }
    }
  }
}
